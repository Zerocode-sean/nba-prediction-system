# Streamlit Secrets Configuration
# This file shows the structure for secrets.toml
# DO NOT commit actual secrets to repository

[api_keys]
ESPN_API_KEY = "your_espn_api_key_here"
NBA_API_KEY = "your_nba_api_key_here"

[database]
CONNECTION_STRING = "your_database_connection_string"

[settings]
DEBUG_MODE = false
PREDICTION_LIMIT = 100
MAX_CONCURRENT_USERS = 1000
CACHE_TTL = 3600

[auth]
ADMIN_PASSWORD = "your_secure_admin_password"
JWT_SECRET = "your_jwt_secret_key"

# Instructions for Streamlit Cloud:
# 1. Go to your Streamlit Cloud dashboard
# 2. Select your app
# 3. Go to Settings > Secrets
# 4. Copy the above structure and add your actual values
# 5. Save secrets
